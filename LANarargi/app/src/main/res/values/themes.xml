<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LANraragi" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="textColor1">#ffffff</item>
        <item name="textColor2">#BDBDBD</item>
        <item name="textColor3">#82c9c3</item>
        <item name="bgColor1">#303030</item>
        <item name="bgColor2">#212121</item>
        <item name="bgColor3">#424242</item>
        <item name="bgColor4">#5b5b5d</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>



    <style name="LAnraragiBlack" parent="Theme.LANraragi">
        <item name="textColor1">#ffffff</item>
        <item name="textColor2">#BDBDBD</item>
        <item name="textColor3">#82c9c3</item>
        <item name="bgColor1">#303030</item>
        <item name="bgColor2">#212121</item>
        <item name="bgColor3">#424242</item>
        <item name="bgColor4">#5b5b5d</item>
    </style>

    <style name="AppTranstiotionAnimation" parent="Theme.LANraragi">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActionModeOverlay">true</item>
<!--        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>-->
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ToolbarPopTheme" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">?attr/bgColor3</item>
        <item name="android:textColor">?attr/textColor1</item>
    </style>






</resources>