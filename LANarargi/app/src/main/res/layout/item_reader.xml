<?xml version="1.0" encoding="utf-8"?>
<com.sena.lanraragi.ui.reader.TouchToggleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/errorView"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/read_file_is_not_support"
        android:textSize="28sp"
        android:padding="48dp"
        android:textColor="#c8c8c8"
        android:gravity="center" />

    <TextView
        android:id="@+id/pageNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#c8c8c8"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/progressBar" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:elevation="20dp"
        android:progressDrawable="@drawable/shape_progress_bar"
        android:indeterminate="true"
        android:indeterminateOnly="false"
        android:layout_centerInParent="true" />

</com.sena.lanraragi.ui.reader.TouchToggleLayout>