<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_detail_24"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="页面缩放"
                android:padding="4dp"
                android:textColor="?attr/textColor2"
                android:textSize="18sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fitWidth"
                    style="@style/reader_nav_fit_method_selected"
                    android:text="适应宽度"/>

                <TextView
                    android:id="@+id/fitHeight"
                    style="@style/reader_nav_fit_method_unselect"
                    android:text="适应高度"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fitPage"
                    style="@style/reader_nav_fit_method_unselect"
                    android:text="适应页面"/>

                <TextView
                    android:id="@+id/fitFlex"
                    style="@style/reader_nav_fit_method_unselect"
                    android:text="流式阅读"/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/bgColor4" />

    <RelativeLayout
        android:id="@+id/goToDetail"
        style="@style/reader_nav_item_layout">

        <ImageView
            style="@style/reader_nav_item_icon"
            android:src="@drawable/ic_detail_24" />

        <TextView
            style="@style/reader_nav_item_text"
            android:text="查看介绍" />

    </RelativeLayout>

    <RelativeLayout
        style="@style/reader_nav_item_layout">

        <ImageView
            style="@style/reader_nav_item_icon"
            android:src="@drawable/ic_detail_24" />

        <TextView
            style="@style/reader_nav_item_text"
            android:text="跳转页面" />

    </RelativeLayout>

    <RelativeLayout
        style="@style/reader_nav_item_layout">

        <ImageView
            style="@style/reader_nav_item_icon"
            android:src="@drawable/ic_detail_24" />

        <TextView
            style="@style/reader_nav_item_text"
            android:text="查看书签" />

    </RelativeLayout>

</LinearLayout>