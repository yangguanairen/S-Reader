    <style name="AppTheme.Base" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="actionOverflowButtonStyle">@style/CustomOverflowStyle</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme.Base">
        <item name="textColor1">#ffffff</item>
        <item name="textColor2">#c8c8c8</item>
        <item name="textColor3">#82c9c3</item>

        <item name="bgColor1">#303030</item>
        <item name="bgColor2">#212121</item>
        <item name="bgColor3">#424242</item> <!-- CardView背景色 -->
        <item name="bgColor4">#5b5b5d</item> <!-- 按钮背景色 -->
        <item name="bgColor5">#4a4a4a</item> <!-- 分割线颜色 -->
    </style>

    <style name="AppTheme.HVerse" parent="AppTheme.Base">
        <item name="textColor1">#000000</item>
        <item name="textColor2">#5C0D11</item>
        <item name="textColor3">#1b5e20</item>

        <item name="bgColor1">#EDEBDF</item>
        <item name="bgColor2">#E3E0D1</item>
        <item name="bgColor3">#F2EFDF</item> <!-- CardView背景色 -->
        <item name="bgColor4">#fff8e1</item> <!-- 按钮背景色 -->
        <item name="bgColor5">#4a4a4a</item> <!-- 分割线颜色 -->
    </style>

    <style name="CustomPopTheme" parent="Widget.AppCompat.PopupMenu">
        <item name="android:colorBackground">?attr/bgColor3</item>
        <item name="android:textColor">?attr/textColor1</item>
    </style>

    <style name="CustomOverflowStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_24</item>
    </style>
</resources>